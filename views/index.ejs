<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Unscrambler</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class="container">
      <fieldset>
        <form action="/" method="post">
          <input name="jumbledText" type="text" class="ghost-input" placeholder="Text" required>
          <input type="submit" class="ghost-button" value="Unscramble">
        </form>
        <div class="OutputWrapper">
          <% if(typeof inputText != "undefined") {%>
            <p>Input Text: <%= inputText %> </p>
          <%}%>
          <hr />

          <% if(typeof data != "undefined") { 
            for(var matches in data) { %>
              <p>Length: <%= matches %></p>
              <span class="MatchWrapper"> <%= data[matches].list %></span>
          <% }} %>
      </div>
      </fieldset>
    </div>
  </body>
</html>