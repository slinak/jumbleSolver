<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Unscrambler</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
      (adsbygoogle = window.adsbygoogle || []).push({
        google_ad_client: "ca-pub-5215275897505385",
        enable_page_level_ads: true
      });
    </script>
    <script>
      function toggleCheckedWord (element) {
        if(element.classList.contains("Checked"))
          element.classList.remove("Checked");
        else
          element.classList.add("Checked");
      }
    </script>
  </head>
  <body>
    <div class="Container">
      <fieldset>
        <form action="/newgame" method="post"> 
          <input type="submit" class="JumbledTextButton" value="New Game">
        </form>
        <form action="/submit" method="post" class="FormWrapper">
          <input name="jumbledText" type="text" class="JumbledTextInput" placeholder="Text" required>
          <input type="submit" class="JumbledTextButton" value="Unscramble">
        </form>
        <div class="OutputWrapper">
          <% if(typeof inputText != "undefined") {%>
            <p>Input Text: <%= inputText %> </p>
          <%}%>
          <hr />
          <% if(typeof data != "undefined") {
            if(error){ %>
              <p>No Matches Found</p>
            <%} else { %>
              <p>Click on a word to cross it off</p>
              <% for(var matches in data) { %>
                <p class="MatchLabel">Length: <%= matches %></p>
                <% Array.prototype.forEach.call(data[matches].list, function(l) { %>
                  <span onclick="toggleCheckedWord(this)" class="MatchWrapper"> <%= l %></span>
                <% }) %>
            <% }}} %>
      </div>
      </fieldset>
    </div>
  </body>
</html>